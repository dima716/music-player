.dropzone
	z-index 2
	display flex
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	align-items center
	justify-content center
	opacity 0
	pointer-events none
	transition 0.3s opacity linear
	background-color rgba(0,0,0,.7)
	color #fff
	font-size 42px
	border 3px dashed #fff

	&_state_open
		opacity 1
